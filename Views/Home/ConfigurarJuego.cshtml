@model TuProyecto.Models.Juego
@{
    ViewData["Title"] = "Configurar Juego";
    // Las listas de dificultades y categorías deberían cargarse en el ViewBag desde el controller
    var dificultades = ViewBag.Dificultades as List<Dificultad>;
    var categorias = ViewBag.Categorias as List<Categoria>;
}

<h2>Configurar Juego</h2>

<form asp-action="Comenzar" method="get">
    <div class="form-group">
        <label for="username">Usuario</label>
        <input type="text" id="username" name="username" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="dificultad">Dificultad</label>
        <select id="dificultad" name="dificultad" class="form-control" required>
            <option value="-1">Todas</option>
            @foreach (var d in dificultades)
            {
                <option value="@d.DificultadID">@d.Nombre</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="categoria">Categoría</label>
        <select id="categoria" name="categoria" class="form-control" required>
            <option value="-1">Todas</option>
            @foreach (var c in categorias)
            {
                <option value="@c.CategoriaID">@c.Nombre</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Jugar</button>
</form>
